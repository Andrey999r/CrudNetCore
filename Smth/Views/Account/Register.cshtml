@{
ViewBag.Title = "Регистрация";
}

<h2 class="auth-title">Регистрация</h2>

<div class="auth-container">
    <form method="post" class="auth-form">
        <input type="text" name="username" placeholder="Логин" class="auth-input" />
        <input type="password" name="password" placeholder="Пароль" class="auth-input" />
        <input type="submit" value="Зарегистрироваться" class="auth-submit" />
    </form>

    <p class="auth-footer">
        Уже зарегистрированы? <a href="/Account/Login">Войти</a>
    </p>
</div>
