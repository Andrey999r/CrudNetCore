@model List<Smth.Data.Survey>
@{
    ViewBag.ActiveTab = "Completed";
    ViewBag.Title = "Пройденные опросы";
}

<head>
    <style>
        .surveys-table {
            width: 100%;
            border-collapse: collapse;
        }
        .surveys-table th, .surveys-table td {
            padding: 10px;
            border: 1px solid #ddd;
            text-align: left;
        }
        .create-survey-link {
            margin-bottom: 10px;
            display: inline-block;
            padding: 10px 15px;
            background-color: #007bff;
            color: white;
            text-decoration: none;
            border-radius: 5px;
        }
        .action-link {
            padding: 5px 10px;
            background-color: #28a745;
            color: white;
            text-decoration: none;
            border-radius: 5px;
        }
    </style>
</head>

<h2>Пройденные опросы</h2>


@if (!Model.Any())
{
    <p class="no-surveys">Вы пока не проходили опросы.</p>
}
else
{
    <table class="surveys-table">
        <thead>
            <tr>
                <th>Название</th>
                <th>Дата прохождения</th>
                <th>Статус</th>
                <th>Действие</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var survey in Model)
            {
                var participant = survey.Participants.FirstOrDefault(p => p.Email == ViewBag.UserEmail);
                if (participant != null)
                {
                    bool isSelfCompleted = survey.Owner?.Email == ViewBag.UserEmail;

                    <tr>
                        <td>@survey.Name</td>
                        <td>@participant.CompletedAt.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>
                            @if (isSelfCompleted)
                            {
                                <span class="self-completed">Пройден самостоятельно</span>
                            }
                            else
                            {
                                <span class="completed-by-others">Полученный опрос</span>
                            }
                        </td>
                        <td>
                            <a href="@Url.Action("InfoSurvey", "Surveys", new { participantId = participant.Id })" class="action-link">
                                Посмотреть ответы
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
}
