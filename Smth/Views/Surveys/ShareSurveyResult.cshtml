@{
    ViewBag.Title = "Результат отправки приглашения";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card p-4 text-center result-box @(ViewBag.IsSuccess ? "success-bg" : "error-bg")">
        <h2 class="result-title">@(ViewBag.IsSuccess ? "✅ Успех!" : "❌ Ошибка!")</h2>
        <p class="result-message">@ViewBag.Message</p>
    </div>
</div>

<!-- Кнопка теперь значительно ниже -->
<div class="container d-flex justify-content-center mt-4">
    <a href="@Url.Action("Index", "Home")" class="btn btn-home">На главную</a>
</div>

<style>
    .result-box {
        max-width: 400px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        padding-bottom: 20px;
        margin-bottom: 30px; /* Увеличенный отступ снизу */
    }

    .success-bg {
        background: #2d6a4f; /* Темно-зеленый */
        color: #ffffff;
    }

    .error-bg {
        background: #6a040f; /* Темно-красный */
        color: #ffffff;
    }

    .result-title {
        font-size: 24px;
        font-weight: bold;
    }

    .result-message {
        font-size: 18px;
        margin-bottom: 15px;
    }

    .btn-home {
        background: #ffbe0b;
        color: #000;
        font-weight: bold;
        padding: 12px 20px;
        border-radius: 8px;
        text-decoration: none;
        font-size: 18px;
        transition: 0.3s;
    }

    .btn-home:hover {
        background: #faa307;
        color: white;
    }
</style>
