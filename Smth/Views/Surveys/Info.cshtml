@model Smth.ViewModel.ParticipantViewModel

@{
    ViewData["Title"] = "Информация об участнике";
}

<style>
    body {
        background-color: #181818;
        color: #ffffff;
        font-family: Segoe UI, sans-serif;
    }
    h2, h3 {
        color: #ffffff;
    }
    table {
        width: 100%;
        border-collapse: collapse;
        background-color: #222;
    }
    th, td {
        padding: 10px;
        border: 1px solid #444;
    }
    th {
        background-color: #333;
        color: #ffffff;
    }
    td {
        color: #ddd;
    }
    input[type="email"], button {
        padding: 8px;
        margin-top: 5px;
        border: none;
        border-radius: 4px;
    }
    input[type="email"] {
        background-color: #222;
        color: #ffffff;
    }
    button {
        background-color: #00d1a0;
        color: #ffffff;
        cursor: pointer;
    }
    button:hover {
        background-color: #00b48a;
    }
    p {
        color: #bbb;
    }
</style>

<h2>@ViewData["Title"]</h2>

<div>
    <p><strong>Имя:</strong> @Model.ParticipantName</p>
    
    <form asp-action="UpdateEmail" method="post">
        <input type="hidden" name="Id" value="@Model.Id" />
        <label for="email">Email:</label>
        <input type="email" id="email" name="Email" value="@Model.Email" required />
        <button type="submit">Обновить Email</button>
    </form>

    @if (TempData["Message"] != null)
    {
        <p style="color: #00d1a0;">@TempData["Message"]</p>
    }
</div>

<h3>Ответы на опросы</h3>
@if (Model.Answers.Any())
{
    <table>
        <thead>
            <tr>
                <th>Вопрос</th>
                <th>Ответ</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var answer in Model.Answers)
            {
                <tr>
                    <td>@answer.Text</td>
                    <td>@answer.ResponseText</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Нет данных о пройденных опросах.</p>
}
