@model Smth.ViewModel.ParticipantViewModel

<div class="participant-container">
    <h2 class="participant-title">Информация об участнике</h2>

    <form method="post" asp-action="UpdateEmail" asp-controller="Surveys" class="participant-form">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label>Имя:</label>
            <input asp-for="ParticipantName" class="form-control" readonly />
        </div>

        <div class="form-group">
            <label>Email:</label>
            <input asp-for="Email" class="form-control email-input" required />
        </div>

        <button type="submit" class="btn save-btn">Сохранить</button>
    </form>

    <h3 class="answers-title">Ответы участника</h3>
    <ul class="answers-list">
        @foreach (var answer in Model.Answers)
        {
            <li class="answer-item"><strong>@answer.Text:</strong> @answer.ResponseText</li>
        }
    </ul>

    <form method="post" asp-action="DeleteParticipant" asp-controller="Surveys"
          onsubmit="return confirm('Вы уверены, что хотите удалить участника?');">
        <input type="hidden" name="participantId" value="@Model.Id" />
        <button type="submit" class="btn delete-btn">Удалить участника</button>
    </form>
</div>

<style>
    .participant-container {
        max-width: 500px;
        margin: auto;
        text-align: center;
        background: #222;
        padding: 20px;
        border-radius: 10px;
        color: #ddd;
    }

    .participant-title, .answers-title {
        color: white;
        font-size: 22px;
        margin-bottom: 15px;
    }

    .form-group {
        margin-bottom: 15px;
        text-align: left;
    }

    .form-control {
        width: 100%;
        padding: 8px;
        border: 1px solid #444;
        background: #333;
        color: white;
        border-radius: 5px;
    }

    .email-input {
        background: #444;
    }

    .btn {
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
        transition: 0.3s;
    }

    .save-btn {
        background: #67BA80;
        color: white;
    }

    .save-btn:hover {
        background: #58a76d;
    }

    .delete-btn {
        background: #ff4d4d;
        color: white;
        margin-top: 10px;
    }

    .delete-btn:hover {
        background: #ff1a1a;
    }

    .answers-list {
        list-style: none;
        padding: 0;
    }

    .answer-item {
        background: #333;
        padding: 8px;
        border-radius: 5px;
        margin: 5px 0;
    }
</style>
